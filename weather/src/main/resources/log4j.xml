<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true"
	xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<appender name="root" class="org.apache.log4j.RollingFileAppender">
		<param name="append" value="false" />
		<param name="file" value="/home/lad/workspace/log/root.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} %-5p [%c{1}] %m%n" />
		</layout>
	</appender>
	
	<appender name="weather" class="org.apache.log4j.RollingFileAppender">
		<param name="append" value="false" />
		<param name="file" value="/home/lad/workspace/log/weather.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} %-5p [%c{1}] %m%n" />
		</layout>
	</appender>
		
	<logger name="cz.kul.weather">
        <level value="DEBUG"/>
        <appender-ref ref="weather" /> 
    </logger>	

	<root>
		<level value="INFO" />
		<appender-ref ref="root" />
	</root>

</log4j:configuration>