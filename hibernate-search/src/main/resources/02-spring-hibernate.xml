<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <!-- Connection Pool. This is javax.sql.DataSource implementation. -->
    <bean id="hsqlDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource"
          destroy-method="close">
        <property name="driverClass" value="org.hsqldb.jdbcDriver"/>
        <property name="jdbcUrl" value="jdbc:hsqldb:mem:db7"/>
        <!--<property name="jdbcUrl" value="jdbc:hsqldb:file:db/hibernate01" />-->
        <property name="user" value="SA"/>
        <property name="password" value=""/>
        <property name="minPoolSize" value="3"/>
        <property name="maxPoolSize" value="10"/>
        <property name="initialPoolSize" value="3"/>

        <!-- When there are no available connections, pool acquire another connection. 
        But acquire a connection is very expensive operation. It is better to acquire connection 
        in batches. This option specify the size of batche. -->
        <property name="acquireIncrement" value="1"/>

        <!-- <property name="preferredTestQuery" value="SELECT 1 FROM INFORMATION_SCHEMA.SYSTEM_USERS" 
        /> <property name="testConnectionOnCheckout" value="true" /> -->
    </bean>

    <bean name="searchConfiguration"
          class="cz.kul.snippets.hibernatesearch._02_programmatic_approach.SearchConfiguration"
          factory-method="createSearchMapping"/>

    <bean id="mySessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource" ref="hsqlDataSource"/>
        <property name="hibernateProperties">
            <map>
                <entry key="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
                <entry key="hibernate.show_sql" value="true"/>
                <entry key="hibernate.hbm2ddl.auto" value="update"/>
                <entry key="hibernate.search.default.directory_provider" value="filesystem"/>
                <entry key="hibernate.search.default.indexBase" value="/var/hibernate-seach-snippets/lucene/indexes"/>
                <entry key="hibernate.search.model_mapping" >
                    <ref bean="searchConfiguration" />
                </entry>
            </map>
        </property>
    </bean>

</beans>