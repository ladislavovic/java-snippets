<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.1.xsd
    http://www.springframework.org/schema/tx 
    http://www.springframework.org/schema/tx/spring-tx-4.1.xsd">

    <!-- Import hibernate configuration -->
    <import resource="classpath:hibernate.xml" />
    
    <bean id="hwSessionFactory" parent="mySessionFactory" primary="true">
        <property name="packagesToScan">
            <list>
                <value>cz.kul.snippets.hibernate._02_entitystate</value>
            </list>
        </property>        
    </bean>
        
    <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="hwSessionFactory" />
    </bean>
    
    <tx:annotation-driven />

    <context:component-scan base-package="cz.kul.snippets.hibernate._02_entitystate" />

</beans>